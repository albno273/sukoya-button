{
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "eslint.autoFixOnSave": true,
  "eslint.options": {
    "configFile": ".eslintrc.js"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "autoFix": true,
      "language": "typescript"
    },
    {
      "autoFix": true,
      "language": "vue"
    }
  ],
  "files.associations": {
    "*.tmpl": "vue-html"
  },
  "typescript.tsdk": "node_modules\\typescript\\lib",
}
